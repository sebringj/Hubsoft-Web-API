#cart {
    width:600px;
    margin:0 auto;
}
#cart th,
#cart td {
    padding:5px 10px;
    vertical-align:middle;
}
#cart th.product-detail,
#cart th.subtotal,
#cart th.qty,
#cart th.price {
    text-align:left;   
}
#cart td.subtotal{
    text-align:right; 
    padding-right:10px;
}
#cart td img.cart-image {
    width:100px;
    height:auto;
}
#cart td input.qty {
    width:20px; 
    text-align:center;
    padding:0;
    vertical-align:middle;
}
button.close {

}
.checkout a
{
  border:none;
  text-decoration:none;
}
button.checkout {

}
td.checkout {
    text-align:right;   
}
#no-items {
    text-align:center;
}